<Window x:Class="ScannerBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScannerBridge"
        Height="360"
        Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🖨 Document Scanner"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"
                   Grid.Row="0"/>

        <!-- Scanner Selection -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 0 0 10" HorizontalAlignment="Center">
            <TextBlock Text="Select Scanner:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0 0 0 5"/>
            <ComboBox Name="ScannerComboBox"
                      Width="280"
                      Height="35"
                      FontSize="13"
                      SelectionChanged="ScannerComboBox_SelectionChanged"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"/>
        </StackPanel>

        <!-- Scan Button -->
        <Button Grid.Row="2"
                Name="ScanButton"
                Content="📄 Scan Now"
                Width="200"
                Height="50"
                FontSize="15"
                FontWeight="Bold"
                Background="#0078D7"
                Foreground="White"
                Margin="0 20 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="ScanButton_Click"
                Cursor="Hand"
                BorderThickness="0"
                BorderBrush="Transparent"/>

        <!-- Bottom Panel: Settings + Save + Status -->
        <StackPanel Grid.Row="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                <Button Content="⚙ Settings"
                        Width="120"
                        Height="35"
                        FontSize="13"
                        Margin="5"
                        Click="OpenSettings_Click"
                        Cursor="Hand"/>
                <Button Content="💾 Save"
                        Width="120"
                        Height="35"
                        FontSize="13"
                        Margin="5"
                        Click="ManualSave_Click"
                        Cursor="Hand"/>
            </StackPanel>

            <TextBlock x:Name="ScanStatus"
                       Text=""
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#4CAF50"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
