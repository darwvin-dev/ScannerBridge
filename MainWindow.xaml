<Window x:Class="ScannerBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScannerBridge"
        Height="400"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9F9F9"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0078D7"
                Padding="12"
                CornerRadius="6"
                Margin="0 0 0 20"
                Grid.Row="0">
            <TextBlock Text="🖨 Document Scanner"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Scanner Selection -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 15">
            <TextBlock Text="Select your scanner:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0 0 0 5"
                       HorizontalAlignment="Left"/>
            <ComboBox Name="ScannerComboBox"
                      Width="300"
                      Height="36"
                      FontSize="13"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"/>
        </StackPanel>

        <!-- Scan Button -->
        <Button Grid.Row="2"
                Name="ScanButton"
                Content="📄 Scan Document"
                Width="220"
                Height="48"
                FontSize="15"
                FontWeight="Bold"
                Background="#28A745"
                Foreground="White"
                Cursor="Hand"
                BorderThickness="0"
                BorderBrush="Transparent"
                Margin="0 10 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="ScanButton_Click">
            <Button.Effect>
                <DropShadowEffect BlurRadius="5"
                        ShadowDepth="2"
                        Opacity="0.3"/>
            </Button.Effect>
        </Button>

        <!-- Status Text -->
        <StackPanel Grid.Row="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0 30 0 0">
            <TextBlock x:Name="ScanStatus"
                       Text=""
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="#333"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Width="360"/>
        </StackPanel>

    </Grid>
</Window>
