<Window x:Class="ScannerBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScannerBridge"
        Height="540"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9F9F9"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Settings -->
            <RowDefinition Height="Auto"/> <!-- Button -->
            <RowDefinition Height="*"/>    <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0078D7"
                Padding="12"
                CornerRadius="6"
                Margin="0 0 0 20"
                Grid.Row="0">
            <TextBlock Text="🖨 Document Scanner"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Scanner Settings -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 15"
                    Width="320">

            <!-- Scanner Selection -->
            <TextBlock Text="Select your scanner:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0 0 0 5"/>
            <ComboBox Name="ScannerComboBox"
                      Height="36"
                      FontSize="13"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"
                      Margin="0 0 0 10"/>

            <!-- Resolution -->
            <TextBlock Text="Resolution (DPI):"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0 5 0 5"/>
            <ComboBox Name="DpiComboBox"
                      Height="36"
                      FontSize="13"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"
                      Margin="0 0 0 10">
                <ComboBoxItem Content="100"/>
                <ComboBoxItem Content="150"/>
                <ComboBoxItem Content="200"/>
                <ComboBoxItem Content="300" IsSelected="True"/>
                <ComboBoxItem Content="600"/>
            </ComboBox>

            <!-- Scan Source -->
            <TextBlock Text="Scan Source:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0 5 0 5"/>
            <ComboBox Name="SourceComboBox"
                      Height="36"
                      FontSize="13"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"
                      Margin="0 0 0 10">
                <ComboBoxItem Content="Flatbed" IsSelected="True"/>
                <ComboBoxItem Content="ADF"/>
            </ComboBox>

            <!-- Color Mode -->
            <TextBlock Text="Color Mode:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0 5 0 5"/>
            <ComboBox Name="ColorModeComboBox"
                      Height="36"
                      FontSize="13"
                      Padding="5"
                      Background="White"
                      BorderBrush="#CCC"
                      Margin="0 0 0 10">
                <ComboBoxItem Content="Color" IsSelected="True"/>
                <ComboBoxItem Content="Grayscale"/>
                <ComboBoxItem Content="BlackWhite"/>
            </ComboBox>
        </StackPanel>

        <!-- Scan Button -->
        <Button Grid.Row="2"
                Name="ScanButton"
                Content="📄 Scan Document"
                Width="220"
                Height="48"
                FontSize="15"
                FontWeight="Bold"
                Background="#28A745"
                Foreground="White"
                Cursor="Hand"
                BorderThickness="0"
                BorderBrush="Transparent"
                Margin="0 10 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="ScanButton_Click">
            <Button.Effect>
                <DropShadowEffect BlurRadius="5"
                                  ShadowDepth="2"
                                  Opacity="0.3"/>
            </Button.Effect>
        </Button>

        <!-- Status Text -->
        <StackPanel Grid.Row="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0 30 0 0">
            <TextBlock x:Name="ScanStatus"
                       Text=""
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="#333"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Width="360"/>
        </StackPanel>

    </Grid>
</Window>
